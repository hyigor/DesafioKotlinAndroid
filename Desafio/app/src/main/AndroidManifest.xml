<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.digitalhouse.desafio2">

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.RecActivity"></activity>
        <activity android:name=".ui.RecycleRest" />
        <activity android:name=".ui.RecycleRec" />
        <activity android:name=".ui.InfActivity" />
        <activity android:name=".ui.RecycleViewerPratos" />
        <activity android:name=".ui.InformacaoActivity" />
        <activity android:name=".ui.ImageActivity" />
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.RegActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.LoginActivity" />
        </activity>
        <activity android:name=".ui.MainActivity" />
        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>